<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>controller.Authentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Funcionario</servlet-name>
        <servlet-class>controller.FuncionarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Assigment</servlet-name>
        <servlet-class>controller.Assigment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Aluno</servlet-name>
        <servlet-class>controller.AlunoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Classe</servlet-name>
        <servlet-class>controller.ClasseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/Authentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Funcionario</servlet-name>
        <url-pattern>/Funcionario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Assigment</servlet-name>
        <url-pattern>/Assigment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Aluno</servlet-name>
        <url-pattern>/Aluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Classe</servlet-name>
        <url-pattern>/Classe</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
